  "paths": {
    "/roles": {
      "post": {
        "tags": ["Roles"],
        "summary": "Criar uma role",
        "description": "Cria uma nova role",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Role criada.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Role já existe!"
          }
        } 
      },
      "get": {
        "tags": ["Roles"],
        "summary": "Listar todas roles.",
        "description": "Retorna todas as roles paginadas.",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Número da página",
            "required": false,
            "schema": {
              "type": "number",
              "example": "page=1"
            },
            "style": "label"
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Número da registros por página",
            "required": false,
            "schema": {
              "type": "number",
              "example": "limit=15"
            },
            "style": "label"
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso.",
            "content": {
              "application/json": {
                "example": {
                  "per_page": 15,
                  "total": 2,
                  "current_page": 1,
                  "data": [
                    {
                      "id": "b46dafe2-af94-4786-b924-a4d7f08ab2d0",
                      "name": "Users",
                      "created_at": "2024-05-01T15:41:28.000Z"
                  },
                  {
                      "id": "b99d0ee0-9924-461d-9137-6ba05a2e7b48",
                      "name": "Admin",
                      "created_at": "2024-05-01T15:41:56.000Z"
                  }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/roles/{id}": {
      "put": {
        "tags": ["Roles"],
        "summary": "Atualizar role.",
        "description": "Atualizar role.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identificador da role",
            "required": true,
            "schema": {
              "type": "string"
            },
            "style": "label"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "example": "Administrator"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Sucesso.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request."
          },
          "404": {
            "description": "Role not found."
          }
        }
      }
    }
  }
